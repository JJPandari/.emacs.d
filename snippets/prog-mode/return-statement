# -*- mode: snippet -*-
# name: return statement
# key: ret
# type: command
# --
(if (eolp)
    (yas-expand-snippet "return $0;")
  (insert "return")
  (when (not (looking-at " "))
    (insert " "))
  (move-end-of-line 1)
  (when (not (looking-back "[;\(\{]"))
    (insert ";"))
  (evil-normal-state)
  (yas-expand-snippet ""))
